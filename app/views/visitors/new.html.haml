- content_for :title do
  Rails Bootstrap
- content_for :description do
  Rails Bootstrap Example
#myCarousel.carousel.slide{"data-ride" => "carousel"}
  %ol.carousel-indicators
    %li.active{"data-target" => "#myCarousel", "data-slide-to" => "0"}
    %li{"data-target" => "#myCarousel", "data-slide-to" => "1"}
    %li{"data-target" => "#myCarousel", "data-slide-to" => "2"}
  .carousel-inner
    .item.active
      %img{:src => "http://lorempixel.com/1170/800/city/9"}
      .carousel-caption.text-center
        %h4 San Francisco
    .item
      %img{:src => "http://lorempixel.com/1170/800/city/7"}
      .carousel-caption.text-center
        %h4 Sydney
    .item
      %img{:src => "http://lorempixel.com/1170/800/city/6"}
      .carousel-caption.text-center
        %h4 Paris
  %a.left.carousel-control{:href => "#myCarousel", "data-slide" => "prev"}
    %span.glyphicon.glyphicon-chevron-left
  %a.right.carousel-control{:href => "#myCarousel", "data-slide" => "next"}
    %span.glyphicon.glyphicon-chevron-right
.text-center
  %br/
  #modal-form.modal{ :tabindex => "-1", :role => "dialog", "aria-labelledby" => "myModalLabel", "aria-hidden" => "true", :style => "display:#{ @visitor.errors.any? ? 'block' : 'none' };" }
    .modal-dialog
      .modal-content
        = simple_form_for @visitor do |f|
          .modal-header
            %button.close{ :type => "button", "data-dismiss" => "modal", "aria-hidden" => "true" } &times;
            %h4#myModalLabel.modal-title Select a City
          .modal-body
            .container
              .row
                .col-md-4.col-md-offset-1
                  = f.error_notification
                  = f.input :favorite, :collection => Visitor::IMAGE_LABELS, label: false, as: :select, prompt: 'Select a favorite ...'
              .row
                .col-md-4.col-md-offset-1
                  = f.input :comment, label: false, :placeholder => 'Add a comment ...', :class => "col-md-12"
          .modal-footer
            = f.submit "Choose!", :class => "btn btn-primary"
            %button.btn.btn-default{ :type => "button", "data-dismiss" => "modal" } Close
  #call-to-action
    %button.btn.btn-primary.btn-lg{ :type => "button", "data-toggle" => "modal", :href => "#modal-form" } Choose!